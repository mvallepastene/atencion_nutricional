@model nutricion_examen.Models.Paciente


    <div class="container mt-5">
        <div class="row">

            <form id="frmPaciente" class="form-normal">


                <div class="form-group">
                    <label for="exampleInputName2">Rut</label>
                    <input type="text" class="form-control" id="rut" name="rut">
                </div>
                <div class="form-group">
                    <label for="">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Apellido</label>
                    <input type="text" class="form-control" id="apellido" name="apellido">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Edad</label>
                    <input type="text" class="form-control" id="edad" name="edad">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Fecha de Nacimiento</label>
                    <input type="date" class="form-control" id="fechNac" name="fecha_nacimiento">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Numero de teléfono</label>
                    <input type="text" class="form-control" id="telefono" name="numero_tel">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Genero</label>
                    <select class="form-control" id="genero" name="genero">
                        <option>Femenino</option>
                        <option>Masculino</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInput">Dirección</label>
                    <input type="text" class="form-control" id="direccion" name="direccion">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Comuna</label>
                    <input type="text" class="form-control" id="comuna" name="comuna">
                </div>
                <div class="form-group">
                    <label for="exampleInput">E-Mail</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Previsión</label>
                    <input type="text" class="form-control" id="prevision" name="prevision">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Ocupación</label>
                    <input type="text" class="form-control" id="ocupacion" name="ocupacion">
                </div>

                
                <div class="form-group">
                    <label for="exampleInput">Estado Agenda</label>
                    <select class="form-control" id="EstadoAgenda" name="id_estado">
                        <option value="0">Selecciona Estado</option>
                    </select>
                </div>

                <button type="button" id="btnGrabar" onclick="insertarPaciente()" class="btn btn-primary">Guardar...</button>

            </form>

            <div class="mt-4">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>




@section scripts{
    <script type="text/javascript">
        //CARGA FUNCIONES AL ARRANCAR DOCUMENTO
        $(document).ready(function () {
            cargarSelect();
            

        });


        //FUNCIONES

       
        /**
         * Funcion que carga el select de las agendas
         */

        function cargarSelect() {
            $.ajax({
                url: '@Url.Action("ListaAgendas","Paciente")',
                type: 'get',
                dataType: 'json',
                success: function (data) {
                    var selecage = $('#agendas');
                    var datos = data.data;
                    //console.log(datos);
                    $(datos).each(function (i, a) {
                        selecage.append('<option value="' + a.Id_Agenda + '">' + a.Rut + ' ' + a.Nombre + ' ' + a.Apellido + ' </opcion>')
                    })
                }

            });

        }

        /*
         evrnto click del boton guardar
         */
        function insertarPaciente() {
            //quita la petición al servidor
            $('#btnGrabar').click(function (e) {
                e.preventDefault();
            });

            //juntar datos que contiene el formulario en una nueva variable
            var formData = new FormData(document.getElementById("frmPaciente"));


            //ejecutamos jQuery para enviar la informacion mediante Ajax
            $.ajax({
                url: '@Url.Action("Create","Paciente")',
                type: 'post',
                data: formData,
                contentType: false,
                processData: false,
                cache: false,
                success: function () {
                    alertify.success("Paciente Creado");
                }


            });


        }

    </script>

}